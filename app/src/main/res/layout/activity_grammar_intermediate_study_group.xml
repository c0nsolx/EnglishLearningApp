<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:gravity="center"
    android:background="@color/brown_dark"
    tools:context=".GrammarIntermediateStudyGroupActivity">

    <TextView
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:text="Start your intermediate grammar course"
        android:textSize="@dimen/_13ssp"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/off_white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_18sdp">

            <TextView
                android:id="@+id/sentence_structure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_13sdp"
                android:background="@drawable/button_background_style"
                android:paddingHorizontal="25dp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Sentence Structure"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView

                android:id="@+id/phrases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Phrases"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView

                android:id="@+id/clauses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Clauses"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView

                android:id="@+id/subject_verb_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Subject-Verb Agreement"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView

                android:id="@+id/modifiers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Modifiers"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView

                android:id="@+id/punctuation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Punctuation"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/passive_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Passive Voice"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/reported_speech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Reported Speech"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/conditional_sentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Conditional Sentences"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/idiomatic_expressions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_not_ready"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="Idiomatic Expressions"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textAllCaps="true"/>





        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_background_style"
        android:paddingHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="@string/go_back"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_13ssp" />

</LinearLayout>

