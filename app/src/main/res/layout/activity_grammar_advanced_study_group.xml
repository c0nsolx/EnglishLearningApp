<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_dark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".GrammarAdvancedStudyGroupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:text="@string/start_your_grammar_course"
        android:textAllCaps="true"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_18sdp">


            <TextView
                android:id="@+id/complex_sentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_13sdp"
                android:background="@drawable/button_background_style"
                android:paddingHorizontal="25dp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/complex_sentences_and_advanced_sentence_structure"
                android:textAllCaps="true"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/complex_verb_tenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_background_style"
                android:paddingHorizontal="25dp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/advanced_verb_tenses_and_forms"
                android:textAllCaps="true"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/drawable_under_construction"
                tools:ignore="RtlSymmetry" />

            <TextView

                android:id="@+id/complex_noun_pronoun_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_background_style"
                android:paddingHorizontal="25dp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/advanced_noun_and_pronoun_usage"

                android:textAllCaps="true"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/drawable_under_construction"
                tools:ignore="RtlSymmetry" />

            <TextView

                android:id="@+id/complex_adjective_adverb_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_background_style"
                android:paddingHorizontal="25dp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/advanced_adjective_and_adverb_usage"
                android:textAllCaps="true"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/drawable_under_construction"
                tools:ignore="RtlSymmetry" />

            <TextView

                android:id="@+id/complex_punctuation_mechanics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_background_style"
                android:paddingHorizontal="25dp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/advanced_punctuation_and_mechanics"
                android:textAllCaps="true"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/drawable_under_construction"
                tools:ignore="RtlSymmetry" />

            <TextView

                android:id="@+id/complex_style_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_background_style"
                android:paddingHorizontal="25dp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/advanced_style_and_usage"
                android:textAllCaps="true"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/drawable_under_construction"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/complex_syntax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_background_style"
                android:paddingHorizontal="25dp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/advanced_syntax"
                android:textAllCaps="true"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/drawable_under_construction"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_background_style"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="@string/go_back"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_13ssp" />

</LinearLayout>

