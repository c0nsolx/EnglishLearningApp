<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_dark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_select_text"
        android:textAllCaps="true"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/beginner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/button_background_style"
        android:paddingHorizontal="@dimen/_20ssp"
        android:paddingVertical="@dimen/_8ssp"
        android:text="@string/beginner"
        android:textAlignment="center"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_24ssp" />

    <TextView
        android:id="@+id/intermediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/button_background_style"
        android:paddingHorizontal="@dimen/_15ssp"
        android:paddingVertical="@dimen/_8ssp"
        android:text="@string/intermediate"
        android:textAlignment="center"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_24ssp"

        />

    <TextView
        android:id="@+id/advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/button_background_style"
        android:paddingHorizontal="@dimen/_15ssp"
        android:paddingVertical="@dimen/_8ssp"
        android:text="@string/advanced"
        android:textAlignment="center"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_24ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/what_to_choose_text"
            android:textAlignment="center"
            android:textColor="@color/off_white"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/take_a_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/button_background_style"
            android:padding="@dimen/_8ssp"
            android:text="@string/Take_a_test"
            android:textAlignment="center"
            android:textColor="@color/off_white"
            android:textSize="@dimen/_18ssp" />


    </LinearLayout>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/button_background_style"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="@string/go_back"
        android:textAlignment="center"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_10ssp" />


</LinearLayout>