<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/app_background2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_select_text"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/off_white"/>

    <TextView
        android:id="@+id/beginner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/beginner"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/off_white"
        android:background="@drawable/button_background_style"
        android:paddingVertical="15dp"
        android:paddingHorizontal="25dp"
        android:layout_marginVertical="20dp"/>
    <TextView
        android:id="@+id/intermediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intermediate"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/off_white"
        android:background="@drawable/button_background_style"
        android:paddingVertical="15dp"
        android:paddingHorizontal="25dp"
        android:layout_marginVertical="20dp"/>
    <TextView
        android:id="@+id/advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/advanced"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/off_white"
        android:background="@drawable/button_background_style"
        android:paddingVertical="15dp"
        android:paddingHorizontal="25dp"
        android:layout_marginVertical="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="@string/what_to_choose_text"
            android:textAlignment="center"
            android:textColor="@color/off_white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/take_a_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_style"
            android:layout_weight="1"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/off_white"
            android:text="@string/Take_a_test"/>



</LinearLayout>

</LinearLayout>