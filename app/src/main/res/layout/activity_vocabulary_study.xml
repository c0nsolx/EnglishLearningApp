<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VocabularyStudyActivity"
    android:background="@drawable/app_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/choose_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/choose_section"
        android:textAlignment="center"
        android:textColor="@color/off_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/choose_section"
        app:layout_constraintBottom_toTopOf="@+id/back">

        <LinearLayout
            android:id="@+id/themes_selection_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/choose_section"
            app:layout_constraintBottom_toTopOf="@+id/back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/colors"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Colors"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animals"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Animals"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/food"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Food"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/clothing"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Clothing"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/transport"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Transport"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/body_parts"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Body parts"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/jobs"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Jobs"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sports"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Sports"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/travel"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selection_bg"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"
                    android:layout_margin = "20dp"
                    android:text="Travel"/>

            </LinearLayout>






        </LinearLayout>


    </ScrollView>



    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textSize="13sp"
        android:layout_marginHorizontal="70dp"
        android:textAlignment="center"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:textColor="@color/off_white"
        android:background="@drawable/button_background_style"
        android:textAllCaps="true"
        android:text="@string/go_back"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>